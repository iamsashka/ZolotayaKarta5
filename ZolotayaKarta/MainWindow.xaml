<Window x:Class="ZolotayaKarta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZolotayaKarta"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid Background="#FFF1F0B1">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgAutoriza" Background="#FFF1F0B1"/>
        <TextBox x:Name="LoginTbx" VerticalAlignment="Center" Margin="123,0,173,0"/>
        <PasswordBox x:Name="PasswordTbx" Grid.Row="1" VerticalAlignment="Center" Margin="123,0,173,0" HorizontalAlignment="Left" Width="504"/>
        <Button x:Name="btnLogin" Grid.Row="2" Click="btnLogin_Click" Background="#FFFAF77A">Авторизоваться</Button>
    </Grid>

</Window>
